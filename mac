#!/usr/bin/env bash

pkgname=jsgtk
pkgver=$(curl -L https://webreflection.github.io/jsgtk/version)
pkgdir="/tmp/$pkgname-$pkgver"
source="https://webreflection.github.io/jsgtk/archive/${pkgname}-${pkgver}.tar.gz"

mkdir -p $pkgdir
cd $pkgdir
curl -L -O $source
tar -xzvf "${pkgname}-${pkgver}.tar.gz"

sudo mkdir -p "/usr/lib/${pkgname}"
sudo cp -r "${pkgname}/jsgtk_modules" "/usr/lib/${pkgname}"
sudo install -Dm755 ${pkgname}.sh "/usr/bin/${pkgname}"

rm -rf $pkgdir