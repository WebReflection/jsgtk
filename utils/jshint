#!/usr/bin/env bash

DIR=$(pwd)
if [ "${DIR:${#DIR}-6}" == "/utils" ]; then
  DIR="${DIR}/.."
fi

jshintDir() {
  echo -e "  $1/*"
  for file in $(ls $1); do
    ${DIR}/node_modules/.bin/jshint $1/$file
  done
}

echo ''
echo -e "$(tput bold)jshint$(tput sgr0)"
jshintDir $DIR/jsgtk_modules/jsgtk
jshintDir $DIR/jsgtk_modules
echo ''